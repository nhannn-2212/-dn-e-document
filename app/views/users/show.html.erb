<% provide :name, @user.fullname %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.fullname %></h1>
      <%= t "documents_upload" %>
      <strong id="doc_count" class="stat">
        <%= @user.documents.size %>
      </strong>
      <%= t "coin" %>
      <strong id="coin" class="stat">
        <%= @user.coin %>
      </strong>
      <%= t "ban" %>
      <strong id="ban" class="stat">
        <%= @user.coin %>
      </strong>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "shared/list", docs: @documents %>
  </div>
</div>
